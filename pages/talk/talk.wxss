/* pages/talk/talk.wxss */

page {
  height: 100%;
}

.talk-container {
  margin-bottom: 200rpx;
}

.scroll-talk {
  margin-bottom: 200rpx;
}

.avter-content {
  margin-top: 10rpx;
  color: #333;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  /* -webkit-line-clamp: 5; */
}

.avter-share-container{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.like-container{
  display: flex;
  flex-direction: row;
  margin-left: 40rpx;
  align-items: center
}

.number{
  color: #666;
  font-size: 24rpx;
  margin-left: 12rpx;
}

.talk-info-text {
  color: #3963BC;
}

.talk-info {
  display: flex;
}

.talk-top {
  font-size: 30rpx;
  margin-left: 40rpx;
  color: #333;
  padding: 10rpx 0;
}

.talk-bottom {
  border-style: solid;
  box-shadow:0px 2px 4px 2px #DDDDDD;
  border-width: 0rpx;
  position: fixed;
  display: flex;
  background: white;
  bottom: 0;
  height: 100rpx;
  width: 100%;
}

