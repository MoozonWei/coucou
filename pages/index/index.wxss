/**index.wxss**/
.index-container {
  height: 100%;
}

.index-header {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #E6E6E6;
  width: 100%;
  height: 200rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.picker-content {
  position: relative;
  font-size: 28rpx;
  color: #333;
  height: 88rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-right: 25rpx;
  box-sizing: border-box
}

.picker-title {
  width: 100px;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 88rpx;
  padding-left: 25rpx;
  padding-right: 15rpx;
  box-sizing: border-box
}

.picker-value {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 88rpx;
  box-sizing: border-box
}

.row {
  position: absolute;
  bottom: 0;
  right: 0;
  height: 2rpx;
  width: 730rpx;
  background: #f3f3f3
}

.button-container {
  position: fixed;
  margin-bottom: 50rpx;
  width: 100%;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}